@model List<EShop.Web.Models.Domain.Billet>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="m-3">
        <a class="btn btn-success" asp-controller="Billets" asp-action="Create">Add new billet</a>
    </div>
    @for ( int i=0; i<Model.Count; i++){
        var item = Model[i];
        if (i % 3 == 0)
        {
            @:<div class="row">
        }

        <div class="col-md-3 m-4">
                <div class="card" style="width: 18rem;">
                  <img style="width: 18rem; height:400px;" src="@item.MovieImage" class="card-img-top" alt="Image for movie"/>
                  <div class="card-body">
                    <h5 class="card-title">@item.MovieName</h5>
                    <p class="card-text">@item.MovieDescription</p>
                    <p class="card-text"><b>@item.BilletPrice</b>$</p>
                    <p class="card-text">@item.Datum</p>

                  </div>
                  <div class="card-footer">
                     <a asp-controller="Billets" asp-action="AddBilletToCard" asp-route-id="@item.Id" class="btn btn-info">Kupi</a>
                     <a asp-controller="Billets" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary">Izmeni</a>
                     <a asp-controller="Billets" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Izbrisi</a>


                      </div>
                </div>
        </div>

        if (i % 3 == 2)
        {
            @:</div>
        }
    }
</div>
